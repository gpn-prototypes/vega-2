{
  "name": "vega-sp",
  "version": "0.0.1",
  "description": "Проект VEGA расчётная платформа",
  "repository": "git@github.com:gpn-prototypes/vega-sp.git",
  "author": "gpn-prototypes",
  "license": "UNLICENSED",
  "engines": {
    "node": "^12.16.2",
    "yarn": "^1.22.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./node_modules/@gpn-prototypes/frontend-configs/git/commitizen.js"
    }
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress --config ./webpack.config.js",
    "dev": "yarn generate:dev:types && cross-env NODE_ENV=development webpack-dev-server --mode development --port 9003 --config ./webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write '{src,types,scripts}/**/*.{json,{j,t}s{,x},css,}'",
    "coverage": "jest --all --coverage",
    "coverage:changes": "jest --coverage --onlyChanged",
    "lint:ts": "eslint --ext=.ts,.tsx .",
    "lint:ts:fix": "eslint --ext=.ts,.tsx . --fix",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:css:fix": "stylelint ./src/**/*.css --fix",
    "lint": "yarn run lint:ts && yarn run lint:css",
    "lint:fix": "yarn run lint:ts:fix && yarn run lint:css:fix",
    "generate:types": "graphql-codegen --config codegen.yml",
    "generate:dev:types": "yarn generate:types --require dotenv/config",
    "generate:dev:types:watch": "yarn generate:dev:types --watch"
  },
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@gpn-prototypes/frontend-configs": "^1.3.4",
    "@gpn-prototypes/vega-ui": "^3.1.11",
    "@graphql-codegen/cli": "1.17.10",
    "@graphql-codegen/named-operations-object": "^1.17.9",
    "@graphql-codegen/near-operation-file-preset": "1.13.3",
    "@graphql-codegen/schema-ast": "^1.18.1",
    "@graphql-codegen/typescript": "1.17.10",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/typescript-react-apollo": "2.0.7",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@testing-library/react-hooks": "^5.1.0",
    "@testing-library/user-event": "^12.6.2",
    "@types/faker": "^5.1.6",
    "@types/final-form-focus": "^1.1.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^14.0.1",
    "@types/ramda": "^0.27.12",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/uuid": "^8.3.0",
    "babel-loader": "^8.1.0",
    "bem-cn": "^3.0.1",
    "cross-env": "^7.0.2",
    "cross-fetch": "^3.0.5",
    "dayjs": "^1.9.3",
    "dotenv": "^8.2.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "faker": "^5.4.0",
    "file-loader": "^6.2.0",
    "final-form": "^4.20.1",
    "final-form-arrays": "^3.0.2",
    "final-form-focus": "^1.1.2",
    "graphql": "^15.3.0",
    "jest": "^26.0.1",
    "netmask": "^2.0.1",
    "postcss": "^7.0.35",
    "postcss-loader": "^4.2.0",
    "postcss-nested": "^4.2.3",
    "ramda": "^0.27.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-final-form": "^6.5.1",
    "react-final-form-arrays": "^3.1.2",
    "react-router-dom": "^5.2.0",
    "ssri": "^8.0.1",
    "systemjs-webpack-interop": "^2.1.2",
    "ts-essentials": "^7.0.0",
    "uuid": "^8.3.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-config-single-spa-react": "^1.12.0",
    "webpack-config-single-spa-react-ts": "^1.12.0",
    "webpack-config-single-spa-ts": "^1.12.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-import-map-plugin": "^1.0.0-alpha0",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "commitizen": "^4.1.2",
    "cz-customizable": "^6.2.0",
    "husky": "^4.2.5",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5"
  }
}
