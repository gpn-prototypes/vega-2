{
  "name": "vega-2",
  "version": "0.0.1",
  "description": "Проект VEGA 2.0",
  "repository": "git@github.com:gpn-prototypes/vega-2.git",
  "author": "csssr",
  "license": "UNLICENSED",
  "engines": {
    "node": "^12.16.2",
    "yarn": "^1.22.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./node_modules/@ttteam-org/frontend-configs/git/commitizen.js"
    }
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --mode development",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "format": "prettier --write '{src,types,scripts}/**/*.{json,{j,t}s{,x},css,}'",
    "coverage": "jest --all --coverage",
    "lint": "npm-run-all lint:*",
    "lint-fix": "npm-run-all format lint-fix:*",
    "lint:ts": "eslint '{src,types}/**/*.ts{,x}'",
    "lint-fix:ts": "eslint '{src,types}/**/*.ts{,x}' --fix",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint-fix:css": "stylelint 'src/**/*.css' --fix"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "@babel/core": "^7.9.0",
    "dotenv": "^8.2.0",
    "husky": "^4.2.5",
    "commitizen": "^4.1.2",
    "cz-customizable": "^6.2.0",
    "lint-staged": "^10.2.4",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@ttteam-org/frontend-configs": "0.3.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^14.0.1",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "jest": "^26.0.1",
    "ttypescript": "^1.5.10",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "webpack-dev-server": "^3.11.0"
  }
}
