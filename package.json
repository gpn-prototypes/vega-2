{
  "name": "vega-sp",
  "version": "0.0.1",
  "description": "Проект VEGA расчётная платформа",
  "repository": "git@github.com:gpn-prototypes/vega-sp.git",
  "author": "csssr",
  "license": "UNLICENSED",
  "engines": {
    "node": "^12.16.2",
    "yarn": "^1.22.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./node_modules/@gpn-prototypes/frontend-configs/git/commitizen.js"
    }
  },
  "scripts": {
    "build": "yarn generate:types && cross-env NODE_ENV=production webpack --progress --config ./webpack.forShellConfig.js",
    "dev": "yarn generate:types && cross-env NODE_ENV=development webpack-dev-server --open --mode development",
    "dev:shell": "cross-env NODE_ENV=development webpack-dev-server --open --mode development --port 9003 --config ./webpack.forShellConfig.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write '{src,types,scripts}/**/*.{json,{j,t}s{,x},css,}'",
    "coverage": "jest --all --coverage",
    "lint:ts": "eslint --ext=.ts,.tsx .",
    "lint:ts:fix": "eslint --ext=.ts,.tsx . --fix",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:css:fix": "stylelint ./src/**/*.css --fix",
    "lint": "yarn run lint:ts && yarn run lint:css",
    "lint:fix": "yarn run lint:ts:fix && yarn run lint:css:fix",
    "generate:types": "graphql-codegen --config codegen.yml",
    "generate:types:watch": "graphql-codegen --watch --config codegen.yml"
  },
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@gpn-prototypes/vega-ui": "^2.12.3",
    "bem-cn": "^3.0.1",
    "final-form": "^4.20.1",
    "graphql": "^15.3.0",
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-final-form": "^6.5.1",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@gpn-prototypes/frontend-configs": "^1.2.12",
    "@graphql-codegen/cli": "1.17.10",
    "@graphql-codegen/typescript": "1.17.10",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^14.0.1",
    "@types/ramda": "^0.27.12",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/single-spa-react": "^2.12.0",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.1.2",
    "cross-env": "^7.0.2",
    "cz-customizable": "^6.2.0",
    "dotenv": "^8.2.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.0",
    "single-spa-react": "^3.0.1",
    "systemjs-webpack-interop": "^2.1.2",
    "ts-essentials": "^7.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-config-single-spa-react": "^1.12.0",
    "webpack-config-single-spa-react-ts": "^1.12.0",
    "webpack-config-single-spa-ts": "^1.12.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2",
    "webpack-import-map-plugin": "^1.0.0-alpha0",
    "@graphql-codegen/typescript-react-apollo": "2.0.7",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/introspection": "1.18.0",
    "@graphql-codegen/near-operation-file-preset": "1.13.3"
  },
  "resolutions": {
    "tslib": "1.13.0"
  }
}
